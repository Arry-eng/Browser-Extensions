{
  "manifest_version": 2,
  "name": "__MSG_name__",
  "short_name": "PMB",
  "version": "0.1.7.3",
  "description": "__MSG_description__",
   "homepage_url": "http://www.stefanvd.net",
  "icons": { "16": "icons/icon16.png",
             "32": "icons/icon32.png",
             "48": "icons/icon48.png",
             "128": "icons/icon128.png"
           },
  "default_locale": "en",
  "background": {
    "page": "background.html",
	"persistent": false
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com https://platform.twitter.com https://apis.google.com; img-src *; object-src 'self'",
  "web_accessible_resources": [
    "images/slice1.png",
    "images/slice2.png",
    "images/slice3.png",
    "images/slice4.png",
    "images/slice5.png",
    "images/slice6.png"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css" : ["css/toolbar.css"],
      "js": ["js/content.js"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
      "default_icon": "icons/icon19.png",
      "default_title": "__MSG_name__",
      "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "minimum_chrome_version": "20",
  "permissions": [ "contextMenus", "tabs", "http://*/*", "https://*/*", "notifications"]
}