{
	"manifest_version": 3,
	"short_name": "__MSG_name__",
	"homepage_url": "https://www.stefanvd.net/support/",
	"description": "__MSG_description__",
	"author": "Stefan vd",
	"version": "2.4.0",
	"icons": {
		"16": "images/icon16.png",
		"24": "images/icon24.png",
		"32": "images/icon32.png",
		"48": "images/icon48.png",
		"96": "images/icon96.png",
		"128": "images/icon128.png"
	},
	"default_locale": "en",
	"content_security_policy": {
		"extension_pages": "default-src 'none'; style-src 'self'; media-src https://www.stefanvd.net; frame-src https://www.youtube.com https://www.stefanvd.net; connect-src https://www.stefanvd.net; script-src 'self'; img-src 'self' https://www.stefanvd.net * data:; object-src 'none'"
	},
	"content_scripts": [
		{
			"matches": [
				"*://*/*"
			],
			"js": [
				"scripts/constants.js",
				"scripts/content.js"
			],
			"run_at": "document_end"
		}
	],
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},
	"permissions": [
		"contextMenus",
		"activeTab",
		"storage",
		"scripting"
	],
	"name": "__MSG_namechrome__",
	"action": {
		"default_icon": {
			"19": "images/icon19.png",
			"38": "images/icon38.png"
		},
		"default_title": "__MSG_browserbutton__"
	},
	"background": {
		"service_worker": "scripts/background.js"
	},
	"commands": {
		"_execute_action": {
			"suggested_key": {
				"default": "Ctrl+Shift+A",
				"mac": "MacCtrl+Shift+A"
			}
		}
	},
	"web_accessible_resources": [
		{
			"resources": [
				"images/arrow.png",
				"images/sharegoogleplus.png",
				"images/sharetwitter.png",
				"images/sharefacebook.png",
				"images/sharegoogleplus@2x.png",
				"images/sharetwitter@2x.png",
				"images/sharefacebook@2x.png",
				"images/icon16.png",
				"styles/aa.css"
			],
			"matches": [
				"<all_urls>"
			],
			"use_dynamic_url": true
		}
	],
	"offline_enabled": true,
	"minimum_chrome_version": "114"
}