{
  "manifest_version": 2,
  "name": "__MSG_name__",
  "short_name": "Print",  
  "version": "2.1.0.9",
  "description": "__MSG_description__",
  "homepage_url": "https://www.stefanvd.net",  
  "icons": { "16": "icons/icon16.png",
             "32": "icons/icon32.png",
             "48": "icons/icon48.png",
             "128": "icons/icon128.png"
           },
  "default_locale": "en",
  "browser_action": {
    "browser_style": true,
          "default_icon": {
            "19": "icons/default.png",
            "38": "icons/default@2x.png"
          },
	        "default_title": "__MSG_name__"	  
  },
  "background": {
    "page": "background.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "MacCtrl+Shift+P"
      }
    }
  },
  "web_accessible_resources": [
    "icons/icon16.png"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": ["activeTab", "contextMenus", "storage", "notifications"],
  "applications": {
    "gecko": {
      "id": "print@stefanvd.net",
      "strict_min_version": "49.0a1"
    }
  }
}