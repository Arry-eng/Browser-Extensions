{
  "manifest_version": 2,
  "name": "__MSG_name__",
  "version": "1.2.9.0",
  "short_name": "Date Today",  
  "description": "__MSG_description__",
  "author": "Stefan vd",
  "homepage_url": "https://www.stefanvd.net",  
  "icons": { "16": "icons/icon16.png",
             "32": "icons/icon32.png",
             "48": "icons/icon48.png",
             "128": "icons/icon128.png"
           },
  "default_locale": "en",
  "browser_action": {
    "default_title": "__MSG_browsertitle__",
    "default_popup": "popup.html"
  },
  "minimum_chrome_version": "43",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "offline_enabled": true,
  "permissions": [ "activeTab", "contextMenus", "storage", "notifications", "alarms" ],
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "MacCtrl+Shift+D"
      }
    }
  },
  "content_scripts": [ {
      "all_frames": true,
      "js": ["js/constants.js","js/content.js"],
      "matches": [ "http://*/*", "https://*/*" ],
      "run_at": "document_end"
   } ]
}