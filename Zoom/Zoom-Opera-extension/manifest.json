{
  "manifest_version": 2,
  "name": "__MSG_name__",
  "version": "2.1.0.11",
  "short_name": "Zoom",   
  "description": "__MSG_description__",
  "author": "Stefan vd",
  "homepage_url": "https://www.stefanvd.net",    
  "icons": { "16": "icons/icon16.png",
             "32": "icons/icon32.png",
             "48": "icons/icon48.png",
             "128": "icons/icon128.png"
           },
  "default_locale": "en",
  "browser_action": {
          "default_icon": {
            "19": "icons/icon1.png",
            "38": "icons/icon1@2x.png"
          },
	"default_title": "__MSG_name__",
    "default_popup": "popup.html"	
  },  
  "background": {
    "page": "background.html",
	  "persistent": false
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com https://platform.twitter.com https://apis.google.com; img-src *; object-src 'self'",
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z",
        "mac": "MacCtrl+Shift+Z"
      }
    }
  },
  "web_accessible_resources": [
    "icons/icon16.png"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["js/constants.js","js/content.js"],
      "run_at": "document_idle"
    }
  ],
  "minimum_chrome_version": "43",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [ "contextMenus", "tabs", "<all_urls>", "storage", "notifications" ]
}